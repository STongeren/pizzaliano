<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {% block title %}
    <title>Stefanos Recipes</title>
    {% endblock %}
    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link rel="stylesheet" href="{{ asset('../assets/css/style.css') }}" />
</head>
<body>
{% block nav %}



<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-5 mt-2 mb-2">
        <div class="container-fluid navay">
            <a class="navbar-brand"  href="{{ path('home')}}">
                Stefanos Recipes</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#myNavbar" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('categories')}}">Categories</a>
                    </li>

                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('contact')}}">Contact me</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <figure>
        <img class="banner-img img-fluid" src="{{ asset('../assets/img/banner.jfif') }}" />
    </figure>
    {% endblock %}

    {% for flashMessage in app.flashes('success') %}
    <div class="alert alert-success">
        {{ flashMessage }}
    </div>
{% endfor %}

    <div class="supporting">
        <div class="container">
            <div class="row mt-2">
                <div class="col-md-6 center">
                    <img src="{{ asset('../assets/img/pizza.png') }}" />
                    <h2>Pizza Categories</h2>
                    <p>The kinds of pizza-categories we have</p>
                    <a class="nav-link btn-default" href="{{ path('categories')}}">Learn More</a>
                </div>

                <div class="col-md-6 center ">
                    <img src="{{ asset('../assets/img/telephone.png') }}" />
                    <h2>Contact Us</h2>
                    <p>Contact us here, if you wish to speak with us.</p>
                    <a class="nav-link btn-default" href="{{ path('contact')}}">Learn More</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row card-row-gap">
        {% for pizza in pizza %}
            <div class="col-md-3 py-3">
                <div class="card poster"> <!-- Added "poster" class here -->
                    {% set productNumber = loop.index %}
                    <img src="{{ asset('img/product' ~ productNumber ~ '.png') }}" class="card-img-top" alt="{{ pizza.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ pizza.name }}</h5>
                        <p class="card-text">Price: {{ pizza.price }}</p>
                        <a href="{{ path('categories') }}" class="btn">View Details</a> <!-- Added path to categories here -->
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    

</div>


{% block body %}{% endblock %}

{% block footer %}
<div class="container">
    <hr>
    <footer>
        <i class="bi bi-linkedin float-end img-thumbnail d-none d-md-block"></i>
        <i class="bi bi-twitter float-end img-thumbnail d-none d-md-block"></i>
        <i class="bi bi-pinterest float-end img-thumbnail d-none d-md-block"></i>
        <p class="clearfix pb-3  text-muted text-center">&copy;Website owned by Stefano.</p>
    </footer>
</div>
{% endblock %}


<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

{% block importmap %}{{ importmap('app') }}{% endblock %}
{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>
