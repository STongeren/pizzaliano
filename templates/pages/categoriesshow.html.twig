{# templates/pages/categoriesshow.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pizzas in Category</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('../assets/css/style.css') }}" />
    <style>
        .cart-container {
            position: fixed;
            top: 0;
            right: 0;
            width: 300px; /* Adjust width as needed */
            padding: 20px;
            background-color: #f8f9fa;
            box-shadow: -5px 0 5px rgba(0, 0, 0, 0.1);
            height: 100vh; /* Make it full height */
            overflow-y: auto; /* Enable vertical scrolling */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Pizzas in Category</h1>
        
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    {% for pizza in pizzas %}
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="{{ asset('img/product' ~ pizza.id ~ '.png') }}" class="card-img-top" alt="{{ pizza.name }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ pizza.name }}</h5>
                                <p class="card-text">Price: {{ pizza.price }}</p>
                                <form method="post">
                                    <input type="hidden" name="pizza_id" value="{{ pizza.id }}">
                                    <button
                                    type="submit" class="btn btn-primary">Add to Cart</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-md-4">
                <div class="cart-container">
                    <h2>Shopping Cart</h2>
                    <ul>
                        {% for itemId, item in cartItems %}
                        <li>{{ item.name }} - Price: {{ item.price }} - Quantity: {{ item.quantity }}
                            <form method="post" action="{{ path('remove_from_cart', {'category_id': id}) }}">
                                <input type="hidden" name="item_id" value="{{ itemId }}">
                                <button type="submit" class="btn btn-danger center">Remove</button>
                            </form>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
